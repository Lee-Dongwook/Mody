{
  "name": "mody",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra/*"
  ],
  "packageManager": "yarn@4.9.2",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@eslint/js": "^9.32.0",
    "@types/babel__core": "^7",
    "@types/lodash": "^4.17.20",
    "@types/react": "~18.2.21",
    "@types/react-native": "^0.72.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-native": "^5.0.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "latest",
    "patch-package": "^8.0.0",
    "pinst": "^3.0.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.4.15",
    "turbo": "^1.4.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.21.0"
  },
  "scripts": {
    "prepare": "husky",
    "postinstall": "patch-package && husky",
    "mody:start": "cd apps/mody && yarn run start",
    "mody:android": "cd apps/mody && yarn run android",
    "mody:ios": "cd apps/mody && yarn run ios",
    "mody:web": "cd apps/mody && yarn run web",
    "mody:reset-project": "cd apps/mody && yarn run reset-project",
    "mody:lint": "cd apps/mody && yarn run lint"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "metro": "^0.81.0",
    "metro-resolver": "^0.81.0"
  },
  "nohoist": [
    "**/expo-router",
    "**/expo-router/**"
  ],
  "dependencies": {
    "@tanstack/react-query": "^5.81.5",
    "expo": "^53.0.12",
    "lodash": "^4.17.21",
    "react-native": "^0.80.0"
  }
}
